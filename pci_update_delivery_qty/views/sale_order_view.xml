<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="add_type_on_saleorder" model="ir.ui.view">
        <field name="name">add.type.on.saleorder</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/header/button[@name='action_cancel']" position="before">
                <button name="%(pci_update_delivery_qty.update_delivery_qty_sale_action_wizard)d"
                        string="Update Delivered Qty" type="action"
                        attrs="{'invisible': [('state','in',['done','cancel'])]}"/>
            </xpath>
            <!--<xpath expr="//form/sheet/group/group[1]/field[@name='project_id']" position="after">-->
            <!--<field name="type"/>                    -->
            <!--</xpath>-->
            <xpath expr="//field[@name='order_line']/form//field[@name='product_id']"
                   position="before">
                <field name="employee_id"/>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='product_id']"
                   position="before">
                <field name="employee_id"/>
            </xpath>
            <xpath expr="//group[@name='sales_person']" position="before">
                <group name="update_deliver_qty" string="Update Delivery Qty"
                       groups="base.group_no_one,account.group_account_invoice">
                    <!--<button name="%(pci_update_delivery_qty.update_delivery_qty_sale_action_wizard)d" string="Update Delivered Qty" type="action" />-->
                    <field name="date_from"/>
                </group>
            </xpath>
            <xpath expr="//field[@name='order_line']/tree//field[@name='price_unit']"
                   position="replace">
                <field name="price_unit"/>
            </xpath>
            <xpath expr="//form/header/button[@name='action_cancel']" position="before">
                <button name="%(pci_update_delivery_qty.report_timesheet_action_wizard)d" string="Timesheet Report"
                        type="action" attrs="{'invisible': [('state','in',['done','cancel'])]}"
                        groups="base.group_no_one,account.group_account_invoice"/>
            </xpath>
        </field>
    </record>

    <record id="analytic_account_auto_invoice" model="ir.ui.view">
        <field name="name">analytic.account.auto.invoice</field>
        <field name="model">account.analytic.account</field>
        <field name="inherit_id" ref="analytic.view_account_analytic_account_form"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="auto_invoice"/>
            </field>
        </field>
    </record>
</odoo>
